<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.OfferFragment">

    <TextView
        android:id="@+id/be_a_buddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="8dp"
        android:text="@string/be_a_buddy_exclamation"
        android:textSize="@dimen/title_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/offer_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_border"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="@dimen/medium_border"
        android:text="@string/offer_a_ride"
        android:textSize="@dimen/large_text"/>

    <TextView
        android:id="@+id/offer_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="@dimen/medium_border"
        android:text="@string/offer_from"
        android:textSize="@dimen/large_text" />

    <EditText
        android:id="@+id/offer_from_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="@dimen/medium_border"
        android:hint="@string/offer_from"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/offer_via_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_border"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:text="@string/offer_via"
        android:textSize="@dimen/large_text" />

    <EditText
        android:id="@+id/offer_via_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:hint="@string/offer_via"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/offer_to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="@dimen/medium_border"
        android:text="@string/offer_to"
        android:textSize="@dimen/large_text" />

    <EditText
        android:id="@+id/offer_to_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="8dp"
        android:hint="@string/offer_to"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/offer_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="@dimen/medium_border"
        android:text="@string/offer_time_taken"
        android:textSize="@dimen/large_text" />

    <EditText
        android:id="@+id/of_duration_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:layout_marginTop="8dp"
        android:hint="@string/offer_time_taken"
        android:textSize="@dimen/small_text" />

    <Button
        android:id="@+id/of_offer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/large_border"
        android:text="@string/offer" />

</LinearLayout>