<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_border"
    android:background="@drawable/widget_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/widget_inner_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/widget_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/small_border"
            android:paddingEnd="@dimen/very_small_border"
            android:paddingTop="@dimen/small_border"
            android:paddingBottom="@dimen/small_border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/widget_image_size"
                android:layout_height="@dimen/widget_image_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_border"
                android:background="@color/icons"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search_24px"
                android:tint="@color/primary_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/very_small_border"
            android:paddingEnd="@dimen/very_small_border"
            android:paddingTop="@dimen/small_border"
            android:paddingBottom="@dimen/small_border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/widget_image_size"
                android:layout_height="@dimen/widget_image_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_border"
                android:background="@color/icons"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_smile_24px"
                android:tint="@color/primary_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/very_small_border"
            android:paddingEnd="@dimen/small_border"
            android:paddingTop="@dimen/small_border"
            android:paddingBottom="@dimen/small_border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/widget_image_size"
                android:layout_height="@dimen/widget_image_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_border"
                android:background="@color/icons"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_message_24px"
                android:tint="@color/primary_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>