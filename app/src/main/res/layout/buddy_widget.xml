<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/widget_height"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/widget_inner_background">

    <LinearLayout
        android:id="@+id/widget_search"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/widget_image_size"
            android:layout_height="@dimen/widget_image_size"
            android:contentDescription="@string/search"
            android:layout_gravity="center"
            android:tint="@color/primary_text"
            android:background="@color/icons"
            android:layout_margin="@dimen/medium_border"
            android:src="@drawable/ic_search_24px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_offer"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/widget_image_size"
            android:layout_height="@dimen/widget_image_size"
            android:contentDescription="@string/search"
            android:layout_gravity="center"
            android:tint="@color/primary_text"
            android:background="@color/icons"
            android:layout_margin="@dimen/medium_border"
            android:src="@drawable/ic_smile_24px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_messages"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/widget_image_size"
            android:layout_height="@dimen/widget_image_size"
            android:contentDescription="@string/search"
            android:layout_gravity="center"
            android:tint="@color/primary_text"
            android:layout_margin="@dimen/medium_border"
            android:background="@color/icons"
            android:src="@drawable/ic_message_24px" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>