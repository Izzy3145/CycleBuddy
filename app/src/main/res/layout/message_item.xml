<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/message_bubble">

    <ImageView
        android:id="@+id/leftMessagePic"
        android:layout_width="@dimen/convo_image_size"
        android:layout_height="@dimen/convo_image_size"
        android:layout_margin="@dimen/medium_border"
        android:contentDescription="@string/view_profile_cd"
        android:src="@drawable/ic_profile_picture_placeholder" />

    <LinearLayout
        android:id="@+id/user_and_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/message_width"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium_border"
            android:paddingStart="@dimen/medium_border"
            android:paddingEnd="@dimen/medium_border"
            android:paddingBottom="@dimen/small_border"
            android:text="@string/received_message"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_border"
            android:paddingStart="@dimen/medium_border"
            android:paddingEnd="@dimen/medium_border"
            android:paddingBottom="@dimen/medium_border"
            android:text="@string/time_of_message"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/very_small_text" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/convo_image_size"
        android:layout_height="@dimen/convo_image_size"
        android:id="@+id/rightMessagePic"
        android:visibility="gone"
        android:layout_margin="@dimen/medium_border"
        android:contentDescription="@string/view_profile_cd"
        android:src="@drawable/ic_profile_picture_placeholder"/>

    </LinearLayout>